{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@wly/*": ["*"],
      "@models/*": ["models/*"],
      "@handlers/*": ["handlers/*"],
      "@libs/*": ["libs/*"],
      "@schemas/*": ["schemas/*"]
    }
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "include": ["src/**/*.ts"]
}
